<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
    
    <link rel="stylesheet" href="/css/productDetail.css" /> 

    <title>Detalle de Producto</title>
</head>

<body>
    <!------------------------------------ header ------------------------------------------------------>
<%- include('../partials/header.ejs') %>

    <!-- MAIN -->
    <main >
        <!-- IMAGEN ARTICULO A DETALLAR: EN UN FUTURO VA A SER UN CARRUSEL -->
        <div class="caja-menu-imagen">
        <div class="imagen-articulo">
            <img src="/images/<%= allProducts[0].img%>" alt="FOTO DE PRUEBA">
        </div>

        <nav class="menu-derecha">
            <h4>MENU</h4>
            <ul>
                <li><a href="">NUEVO LANZAMIENTO</a></li>
                <li><a href="">REMERAS</a></li>
                <li><a href="">CAMPERAS</a></li>
                <li><a href="">PANTALONES</a></li>
            </ul>
        </nav>
    </div>
</div>
        
        <!-- DETALLES DEL PRODUCTO DEBAJO DE LA IMAGEN -->
        <div class="caja-detalles">
            <div class="titulo-articulo">
                <h2><%= allProducts[0].nombre%></h2>
            </div>
            <div class="precio-articulo">
                <h3>$<%= allProducts[0].precio%></h3>
            </div>
        </div>

        <!-- TALLES -->
        <div class="talle talle1">
            <h4>ELEGI TU TALLE:</h4>
            <div class="caja-talles">
            <label class="listado-talles"><input type="checkbox" id="cbo" name="talles" value="first_checkbox">S</label>
            <label class="listado-talles"><input type="checkbox" id="cbo" name="talles" value="second_checkbox">M</label>
            <label for="cbox3" class="listado-talles"><input type="checkbox" id="cbox" name="talles" value="third_checkbox">L</label>
            <label for="cbox4" class="listado-talles"><input type="checkbox" id="cbox" name="talles" value="four_checkbox">XL</label>
            </div>
        </div>

        <!-- COLORES -->
        <div class="talle talle1">
            <h4>AHORA TU COLOR:</h4>
            <div class="caja-talles">
            <label class="listado-color1 borde"><input type="checkbox" id="cb1" name="colores" value="first_checkbox"></label>
            <label class="listado-color2 borde"><input type="checkbox" id="cb2" name="colores" value="second_checkbox"></label>
            <label for="cbox3" class="listado-color3 borde"><input type="checkbox" id="cb3" name="colores" value="third_checkbox"></label>
            <label for="cbox4" class="listado-color4 borde"><input type="checkbox" id="cbox4" name="colores" value="four_checkbox"></label>
            </div>
        </div>

        <!-- DESCRIPCION DEL PRODUCTO -->
        <div class="descripcion-articulo">
            <h4>DESCRIPCION DEL PRODUCTO:</h4>
            <p><%= allProducts[0].descripcion%></p>
        </div>

        <!-- BOTON AGREGAR A CARRITO -->
        <div>
            <a href="/product-cart">
                <input type="submit" class="boton-comprar" value="AGREGAR AL CARRITO">
            </a>
        </div>

        <!-- PRODUCTOS RELACIONADOS: FUTURO CARRUSEL -->
        <div>
            <h5 class="titulo-productosRelacionados">PRODUCTOS RELACIONADOS:</h5>
            <div class="productos-relacionados">
                <article>
                    <a href="/product-cart">
                    <img src="/images/acdc_roja.jpg" alt="">
                </a>
                </article>
                <article>
                    <a href="/product-cart">
                    <img src="/images/baller.jpg" alt="">
                </a>
                </article>
            </div>
        </div>

    </main>
<!--------------------------------- footer --------------------------------------------------------------->
<%- include('../partials/footer.ejs') %>

</body>

</html>