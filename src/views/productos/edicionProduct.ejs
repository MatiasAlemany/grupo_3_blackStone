<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
        <!-- LINK CSS -->
        <link rel="stylesheet" href="/css/creacionProducto.css" />
        <!-- BOOTSTRAP -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <title>Creacion de Producto</title>
</head>

<body>
    <main>
        <div>
            <h2 class="titulo-principal">Estas editando: </h2>
        </div>
        <section>
            <div class="form-imagen">
            <form action="/edicionProduct/<%= Productos.id %>" method="POST" class="" enctype="multipart/form-data">
                <!-- CAJA FORMULARIO -->
                <div class="caja-formulario">
                <!-- NUMERO DE ID -->
                <div>
                    <label for="">Numero de id:</label>
                    <input type="text" name="id" value="<%= Productos.id %>" class="form-control" id="id" required />
                </div>
                <!-- NOMBRE ARTICULO -->
                <div>
                    <label for="">Nombre de articulo:</label>
                    <input type="text" name="nombre" class="form-control" id="nombre" value="<%= Productos.nombre %>" placeholder="Nombre de articulo"
                        required />
                </div>
                <!-- DESCRIPCION ARTICULO -->
                <div >
                    <label for="">Descripcion de articulo:</label>
                    <input outline="none" type="text" name="descripcion" class="form-control" id="nombreUsuario"
                        placeholder="Descripcion de articulo" value="<%= Productos.descripcion %>" required />
                </div>
                <!-- FOTO DE PRODUCTO -->
                <div class="foto">
                    <label for="foto">Fotos de producto:</label>
                    <input type="file" name="img" id="img" class="form-control" value="<%= Productos.img %>"/>
                </div>
                <!-- FOTO DE PRODUCTO 2-->
                <div class="foto">
                    <label for="foto">Fotos de producto:</label>
                    <input type="text" name="uri_foto2" id="imagenProducto2" class="form-control" placeholder="Introduce tu URL" value="<%= Productos.uri_foto2 %>"/>
                </div>
                <!-- FOTO DE PRODUCTO 3-->
                <div class="foto">
                    <label for="foto">Fotos de producto:</label>
                    <input type="text" name="uri_foto3" id="imagenProducto3" class="form-control" placeholder="Introduce tu URL" value="<%= Productos.uri_foto3 %>"/>
                </div>
                <!-- PRECIO ARTICULO -->
                <div>
                    <label for="">Precio articulo:</label>
                    <input type="text" name="precio" class="form-control" id="precio" value="<%= Productos.precio%>" required />
                </div>
                <!-- DESCUENTO ARTICULO -->
                <div>
                    <label for="">Descuento articulo:</label>
                    <input type="text" name="descuento" class="form-control" id="descuento" value="<%= Productos.descuento %>" required />
                </div>
                <!-- Talle ARTICULO -->
                <div>
                    <label for="">Talle articulo:</label>
                    <input type="text" name="talle" class="form-control" value="<%= Productos.talle %>"/>
                </div>
                <!-- COLOR ARTICULO -->
                <div>
                    <label for="">Color articulo:</label>
                    <input type="text" name="color" class="form-control" value="<%= Productos.color %>"/>
                </div>
                </div>

                <!-- CAJA BOTONES -->
                <div class="caja-botones">
                <!-- BOTON MODIFICAR ARTICULO -->
                <div class="espacio-botones">
                    <button class="btn btn-outline-secondary" type="submit">Modificar</button>
                </div>
                <!-- BOTON RESETEAR FORMULARIO -->
                <div class="espacio-botones">
                    <input class="btn btn-outline-secondary" type="reset" placeholder="Restablecer" value="Restablecer">
                </div>
            </form>
                <!-- BOTON ELIMINAR ARTICULO --> 
                <div class="espacio-botones">
                    <form action="/delete/<%= Productos.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-outline-secondary">ELIMINAR ARTICULO</button>
                    </form>
                </div>
            </div>
            <!-- IMAGEN ARTICULO -->
            <div class="imagen-art">
                <label>Imagen de tu articulo:</label>
                <img src="/images/<%= Productos.img%>" alt="FOTO DE PRUEBA">
            </div>
        </div>
        </section>
    </main>
</body>

</html>