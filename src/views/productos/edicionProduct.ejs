<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
        <!-- LINK CSS -->
        <link rel="stylesheet" href="/css/creacionProducto.css" />
        <!-- BOOTSTRAP -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <title>Creacion de Producto</title>
</head>

<body>
    <main>
        <div>
            <h2 class="titulo-principal">Estas editando: <%=allProducts.nombre %></h2>
        </div>
        <section>
            <form action="/edicionProduct/<%= allProducts.id %>?_method=PUT" method="POST" class="">
                <!-- CAJA FORMULARIO -->
                <div class="caja-formulario">
                <!-- NUMERO DE ID -->
                <div>
                    <label for="">Numero de id:</label>
                    <input type="text" name="id" value="<%= allProducts.id %>" class="form-control" id="id" required />
                </div>
                <!-- NOMBRE ARTICULO -->
                <div>
                    <label for="">Nombre de articulo:</label>
                    <input type="text" name="nombre" class="form-control" id="nombre" value="<%= allProducts.nombre %>" placeholder="Nombre de articulo"
                        required />
                </div>
                <!-- DESCRIPCION ARTICULO -->
                <div >
                    <label for="">Descripcion de articulo:</label>
                    <input outline="none" type="text" name="descripcion" class="form-control" id="nombreUsuario"
                        placeholder="Descripcion de articulo" value="<%= allProducts.descripcion %>" required />
                </div>
                <!-- FOTO DE PRODUCTO -->
                <div class="foto">
                    <label for="foto">Fotos de producto:</label>
                    <input type="file" name="foto" class="form-control" placeholder="Fotos de producto" id="foto"/>
                </div>
                <!-- PRECIO ARTICULO -->
                <div>
                    <label for="">Precio articulo:</label>
                    <input type="text" name="precio" class="form-control" id="precio" value="<%= allProducts.precio%>"
                        required />
                </div>
                <!-- DESCUENTO ARTICULO -->
                <div>
                    <label for="">Descuento articulo:</label>
                    <input type="text" name="descuento" class="form-control" id="descuento"
                    value="<%= allProducts.descuento %>" required />
                </div>
                <!-- CUOTAS ARTICULO -->
                <div>
                    <label for="">Cuotas articulo:</label>
                    <input type="text" name="cuotas" class="form-control" id="cuotas" value="<%= allProducts.cuotas %>"
                        required />
                </div>
                </div>

                <!-- CAJA BOTONES -->
                <div class="caja-botones">
                <!-- BOTON MODIFICAR ARTICULO -->
                <div class="espacio-botones">
                    <button class="btn btn-outline-secondary" type="submit">Modificar</button>
                </div>
                <!-- BOTON RESETEAR FORMULARIO -->
                <div class="espacio-botones">
                    <input class="btn btn-outline-secondary" type="reset" placeholder="Restablecer" value="Restablecer">
                </div>
            </form>
                <!-- BOTON ELIMINAR ARTICULO --> 
                <div class="espacio-botones">
                    <form action="/delete/<%= allProducts.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-outline-secondary">ELIMINAR ARTICULO</button>
                    </form>
                </div>
            </div>
        </section>
    </main>
</body>

</html>