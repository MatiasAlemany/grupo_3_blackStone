<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
        <!-- LINK CSS -->
        <link rel="stylesheet" href="/css/creacionProducto.css" />
        <!-- BOOTSTRAP -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <title>Creacion de Producto</title>
</head>

<body class="body">
    <main>
        <div>
            <h2 class="titulo-principal">SUBI TU NUEVO PRODUCTO:</h2>
        </div>
        <section>
            <!-- forEach PARA MOSTRAR MSG DE ERRORES -->
            <%if (locals.errors) {
                errors.forEach(error => { %>
                    <p class="errores"><%= error.msg %></p>
            <%	})
                } %>
            <form action="/creacionProduct" method="POST" class="" enctype="multipart/form-data">

                
                <!-- CAJA FORMULARIO -->
                <div class="caja-formulario">
                <!-- NOMBRE ARTICULO -->
                <div>
                    <label for="foto">Nombre articulo:</label>
                    <input type="text" name="nombre" value="<%= locals.old && old.nombre ? old.nombre : '' %>" class="form-control" id="nombre" placeholder="Nombre de articulo"
                         />
                </div>
                <!-- DESCRIPCION ARTICULO -->
                <div >
                    <label for="foto">Descripcion articulo:</label>
                    <input outline="none" type="text" name="descripcion" value="<%= locals.old && old.descripcion ? old.descripcion : '' %>" class="form-control" placeholder="Descripcion de articulo"  />
                </div>
                <!-- FOTO DE PRODUCTO -->
                <div class="foto">
                    <label for="foto">Fotos de producto:</label>
                    <input type="file" name="imagenProducto" class="form-control" id="imagenProducto">
                </div>
                <!-- PRECIO ARTICULO -->
                <div>
                    <label for="foto">Precio de producto:</label>
                    <input type="text" name="precio" value="<%= locals.old ? old.precio : '' %>" placeholder="Precio de articulo" class="form-control"  />
                </div>
                <!-- DESCUENTO ARTICULO -->
                <div>
                    <label for="foto">Descuento de producto:</label>
                    <input type="text" name="descuento" class="form-control" id="descuento"
                        placeholder="Descuento de articulo"  />
                </div>
                <!-- CUOTAS ARTICULO -->
                <div>
                    <label for="foto">Cuotas de producto:</label>
                    <input type="text" name="cuotas" class="form-control" id="cuotas" placeholder="Cuotas de articulo"
                         />
                </div>
                </div>

                <!-- CAJA BOTONES -->
                <div class="caja-botones">
                <!-- BOTON CARGAR ARTICULO -->
                <div>
                    <input class="btn btn-outline-secondary" type="submit" value="Cargar" placeholder="Cargar">
                </div>
                <!-- BOTON RESETEAR FORMULARIO -->
                <div>
                    <input class="btn btn-outline-secondary" type="reset" placeholder="Restablecer" value="Restablecer">
                </div>
            </div>
            </form>
        
        </section>
    </main>
</body>

</html>